@phdthesis{mimmi_demand-driven_2008-1,
	address = {Washington, D.C},
	type = {Thesis},
	title = {Demand-driven {Solutions} to {Illegal} {Electricity} {Connections}: {Preliminary} {Evaluation} of the "{Conviver}" program in the urban favelas of {Belo} {Horizonte}, {Brazil}},
	copyright = {All rights reserved},
	shorttitle = {Thesis},
	url = {http://hdl.handle.net/10822/555925},
	abstract = {In Brazilian urban favelas, the development of informal connections is common, relatively easy to obtain, and allow citizens to acquire electricity eluding or reducing the regular charging of consumption. Genuine affordability problems and limited means of subsistence are the most important but not exhaustive explanation of theft and nonpayment problems afflicting energy distribution companies. With a preliminary evaluation of the project “Conviver: energia para viver melhor”, implemented in Belo Horizonte, this thesis studies the determinants of illegal connections and energy fraud in the context of low-income urban favelas. Using the tecnique of logistic regression, the study illustrates how the probability of engaging in illegal behavior is explained by the following concurring factors: inadequate energy provision and lacking equipment; income and affordability; inefficient and incorrect use of domestic electric appliances. Additionally, based on the Conviver sample of 15,279 households, the thesis provides an evaluation of the effectiveness of different pro-poor schemes (government poverty subsidies and electricity block tariffs) at subsidizing energy costs for poor customers. The analysis proves that social tariffs, even though not exclusively responsible, can be considered as factors that mitigate the occurrence of illegality. The type of social tariffs that work better are the ones that are more strictly connected to consumption, as opposed to those linked to poverty subsidies. This make a strong case for a “tariff engineering” that takes into serious account the electricity needs in term of consumption, and try to segment the customers to realistically match the actual needs (minimum; low-medium; houses with micro-businesses in the dwelling). As the preliminary outcomes of the Conviver program document, the positive effect of propoor tariff schemes will be even multiplied if combined with effort for the orientation of low-income customers to energy-saving behaviors.},
	language = {English},
	school = {Georgetown University},
	author = {Mimmi, Luisa M.},
	month = may,
	year = {2008},
	keywords = {block tariff, favela, urban poverty},
	file = {TesiMaster_2008.pdf:/Users/luisamimmi/Documents/02_Reference/Zotero/storage/84B3LKBT/TesiMaster_2008.pdf:application/pdf}
}

@techreport{mimmi_youth_2009-2,
	address = {Washington, D.C},
	type = {Working {Paper}},
	title = {Youth {Employment} and {Entrepreneurship} {Programs}: {A} {Review} of {Eight} {Best} {Practices}},
	copyright = {All rights reserved},
	url = {https://www.researchgate.net/publication/320044319_Youth_Employment_and_Entrepreneurship_Programs_A_Review_of_Eight_Best_Practices},
	abstract = {This report originated as a contribution to the “Program of Integrated Public Policies for the Youth,” through which the IDB is supporting the Brazilian Municipality of Fortaleza in fostering socio-economic inclusion for young people in disadvantaged contexts. The first contribution of the study is to offer a synthetic outline of the issues and challenges relative to social and productive exclusion of young people, distinguishing between developed and developing regions, with special attention to Brazil. The report identifies and outlines, with empirical evidence, the following five macro-challenges that youth employment currently poses to countries like Brazil. Namely: (a) insufficient educational attainment and quality; (b) poverty, vulnerability, and youth at risk; (c) mismatch in labor supply and demand; (d) lack of opportunities and high incidence of informality; and (e) expected labor market effects of the ongoing crisis. Against such a framework, the study identifies and describes eight worldwide best practices in the field of youth employment policies. The choice of the case studies maintains an explicit focus on programs with an emphasis on the promotion of self-employment and entrepreneurship as alternative tools to tap an existing under-exploited young entrepreneurial potential, in a context of shrinking labor demand from the public and formal sector. The identified most successful and sustainable programs (retrieved in a variety of different contexts) consistently show some common key success factors. In particular, they exhibit an emphasis on selection and targeting (according to age, education level, and access to credit, business networks, and tools); a “person-centered” approach (as opposed to “product-” or “policy-centered”); and a proper combination of business-related and training initiatives. A documented barrier is often the lack of coordination between public agencies, at different levels, with the private sector and local civil society representatives. Additionally, in the Brazilian context, it seems utterly important to balance efforts between measures that increase the labor welfare for all, while simultaneously striving to improve the business environment and incentivize microenterprises to register.},
